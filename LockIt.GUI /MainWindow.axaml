<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LockIt.GUI.MainWindow"
        Width="600" Height="800"
        MinWidth="600" MinHeight="800"
        MaxWidth="600" MaxHeight="800"
        CanResize="False"
        ShowInTaskbar="True"
        Title="ðŸ”’LockIt Password Manager"
        Background="#2f3d39"
        TransparencyLevelHint="AcrylicBlur"
        WindowStartupLocation="CenterScreen"
        xmlns:gui="clr-namespace:LockIt.GUI"
        x:DataType="gui:MainWindow">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- CabeÃ§alho do app -->
        
        <Border Grid.Row="0" Background="#001f1a" Padding="10">
            <TextBlock Text="ðŸ”’ LockIt"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        
        
        <!-- Corpo principal -->
        
        <Grid Grid.Row="1" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- 0: Password display -->
                <RowDefinition Height="Auto" /> <!-- 1: Buttons -->
                <RowDefinition Height="Auto" /> <!-- 2: Slider -->
                <RowDefinition Height="Auto" /> <!-- 3: Switches -->
                <RowDefinition Height="Auto" /> <!-- 4: Service -->
                <RowDefinition Height="Auto" /> <!-- 5: Email -->
                <RowDefinition Height="Auto" /> <!-- 6: Notes -->
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="*" />
                
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Display da senha (linha 0) -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="{Binding PasswordDisplay, FallbackValue='Your password will appear here'}"
                       Foreground="White"
                       FontSize="18"
                       FontFamily="Courier"
                       Background="#0a2b26"
                       Padding="10"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       Margin="0,0,0,25"/>
            
            <!-- BotÃµes Copy e Reload (linha 1) -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="10" 
                        Margin="0,10,0,25">
                <Button Content="Copy this password"
                        Width="160"
                        Height="40"
                        Click="OnCopyClicked"/>
                <Button Content="Reload"
                        Width="120"
                        Height="40"
                        Click="OnReloadClicked"/>
            </StackPanel>
            
            <!-- ========== SLIDER: Tamanho da Senha ========== -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Lenght" Foreground="White" FontSize="14"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Slider Minimum="4" Maximum="40" Value="{Binding PasswordLength}"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Width="450" Margin="0,0,10,0"
                        VerticalAlignment="Center"/>
                <TextBlock Text="{Binding PasswordLength}"
                           Foreground="White" FontSize="14"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- ========== SWITCHES: Tipos de Caracteres ========== -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Vertical"
                        HorizontalAlignment="Center" Margin="0,10,0,20">
                <ToggleSwitch Content="Digits (e.g. 543)"
                              IsChecked="{Binding IncludeDigits}"
                              Foreground="White" Margin="0,5,0,0"/>
                <ToggleSwitch Content="Lowercase (e.g aafdz)"
                              IsChecked="{Binding IncludeLowercase}"
                              Foreground="White" Margin="0,5,0,0"/>
                <ToggleSwitch Content="Uppercase (e.g. AWYBZ)"
                              IsChecked="{Binding IncludeUppercase}"
                              Foreground="White" Margin="0,5,0,0"/>
                <ToggleSwitch Content="Symbols (e.g. $#@!)"
                              IsChecked="{Binding IncludeSpecialChars}"
                              Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
            
            
            <TextBlock Grid.Row="4" Grid.Column="0" 
                       Text="Service:"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"/>
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding Service}"
                     Width="450"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Background="#00221c"
                     Foreground="White"
                     BorderBrush="#004d40"
                     BorderThickness="1"
                     Margin="0,10,0,0"/>
            
            <TextBlock Grid.Row="5" Grid.Column="0"
                       Text="Email:"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"/>
            <TextBox Grid.Row="5" Grid.Column="1"
                     Text="{Binding Email}"
                     Width="450"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Background="#00221c"
                     Foreground="White"
                     BorderBrush="#004d40"
                     BorderThickness="1"
                     Margin="0,10,0,0"/>
            
            <TextBlock Grid.Row="6" Grid.Column="0"
                       Text="Notes:"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"/>
            <TextBox Grid.Row="6" Grid.Column="1"
                     Text="{Binding Notes}"
                     Width="450"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Background="#00221c"
                     Foreground="White"
                     BorderBrush="#004d40"
                     BorderThickness="1"
                     Margin="0,10,0,0"/>
            
            <TextBlock Grid.Row="7" Grid.ColumnSpan="2"
                       Text="{Binding StatusMessage}"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            
            <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="Save"
                    Width="200" Height="40"
                    HorizontalAlignment="Center"
                    Click="OnSaveClicked"/>
        </Grid>
        
        <!-- RodapÃ© -->
        
        <Border Grid.Row="2" Background="#001f1a" Padding="10">
            <TextBlock Text="Â© 2025 LockIt App"
                       Foreground="Gray"
                       FontSize="12"
                       HorizontalAlignment="Center">
            </TextBlock>
        </Border>
    </Grid>
</Window>