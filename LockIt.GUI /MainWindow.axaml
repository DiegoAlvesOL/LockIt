<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LockIt.GUI.MainWindow"
        Width="600" Height="800"
        Title="LockIt | Password Manager"
        Background="#192422"
        TransparencyLevelHint="AcrylicBlur">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- CabeÃ§alho do app -->
        
        <Border Grid.Row="0" Background="#001f1a" Padding="10">
            <TextBlock Text="ðŸ”’ LockIt"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        
        
        <!-- Corpo principal -->
        
        <Grid Grid.Row="1" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Welcome to LockIt!"
                       Foreground="White"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="Generate Password:"
                    Width="200" Height="40"
                    Background="#03120f"
                    Foreground="White"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,10,10,0"
                    Click="OnGenerateClicked"/>
            
            <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                    Content=" Copy this password"
                    Width="200" Height="40"
                    Background="#03120f"
                    Foreground="White"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,10,10,0"
                    Click="OnListClicked"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Name or address of service:"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"/>
            
            <TextBox Grid.Row="2" Grid.Column="1"
                     Width="380"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Background="#00221c"
                     Foreground="White"
                     BorderBrush="#004d40"
                     BorderThickness="1"
                     Margin="0,10,0,0"/>
            
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="email:"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"/>
            
            <TextBox Grid.Row="3" Grid.Column="1"
                     Width="380"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Background="#00221c"
                     Foreground="White"
                     BorderBrush="#004d40"
                     BorderThickness="1"
                     Margin="0,10,0,0"/>
            
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Text="Notes:"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="0,10,10,0"/>
            
            <TextBox Grid.Row="4" Grid.Column="1"
                     Width="380"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Background="#00221c"
                     Foreground="White"
                     BorderBrush="#004d40"
                     BorderThickness="1"
                     Margin="0,10,0,0"/>
            
            <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Content="Save"
                    Width="200" Height="40"
                    Background="#03120f"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Click="OnListClicked"/>
        </Grid>
        
        <!-- RodapÃ© -->
        
        <Border Grid.Row="2" Background="#001f1a" Padding="10">
            <TextBlock Text="Â© 2025 LockIt App"
                       Foreground="Gray"
                       FontSize="12"
                       HorizontalAlignment="Center">
            </TextBlock>
        </Border>
    </Grid>
</Window>
